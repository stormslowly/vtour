		ondown="" onhover="showtext('tea table');"

		onout="" onover="" onup="" pausedonstart="False" range="" refreshrate="" rotatewithview="False" rx="0" ry="0" rz="0" scale="1.00" smoothing="True" updateeveryframe="True"  visible="True" volume="1" width="" zoom="False" zorder="1">
